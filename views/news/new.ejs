<% include ../plain-partials/header %>
<section class="admin">
    <div class="container">
        <h3>Create A News Article</h3>
        <form action="/news" method="POST">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="News Article Title" required>
                    </div>
                    <div class="image-upload" class="form-group">
                        <label for="image1">Select a main image</label>
                        <input type="file" class="form-control" accept=".jpg,.png" id="image1" name="image1" placeholder="Upload Main Image" required>
                        <progress class="custom-progress" value="0"></progress>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                 <div class="col-12">
                    <div class="form-group">
                        <textarea class="form-control froala" type="text" name="description" placeholder="Description">
                        </textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Create News Article</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<% include ../plain-partials/footer %>
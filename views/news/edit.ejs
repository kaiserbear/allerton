<% include ../plain-partials/header %>
<section class="admin">
    <div class="container">
        <h3>Edit "<%= job.title %>"</h3>

        <form action="/news/<%= job._id %>?_method=PUT" method="POST">
            <div class="row">
                <div class="col-6 offset-3">
                    <div class="form-group">
                        <input class="form-control" type="text" name="job[title]" value="<%= job.title %>" required>
                    </div>
                    <div class="image-upload" class="form-group">
                        <input type="file" class="form-control" accept=".jpg,.png" name="job[image1]" placeholder="Upload Image">
                        <progress class="custom-progress" value="0"></progress>
                        <span class="info" data-toggle="tooltip" data-placement="top" title="Make sure the image has the right dimensions - 1920x1276, or equivalent/similar ratio.">
                          <i class="fas fa-info-circle"></i>
                        </span>
                         <% if (job.image1) { %>
                            <img class="preview-image" src="https://allerton.s3.amazonaws.com/<%= job.image1 %>" />
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <textarea class="form-control froala" type="text" name="job[description]"><%= job.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update "<%= job.title %>"</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>


<% include ../plain-partials/footer %>
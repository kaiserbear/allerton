<% include ../plain-partials/header %>
<section class="admin">
    <div class="container">
        <h3>Edit "<%= portfolio.title %>"</h3>

        <form action="/portfolio/<%= portfolio._id %>?_method=PUT" method="POST">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <input class="form-control" type="text" name="portfolio[title]" value="<%= portfolio.title %>">
                </div>
                <div class="image-upload" class="form-group">
                    <input type="file" class="form-control" accept=".jpg,.png" name="portfolio[image]" value="<%= portfolio.image %>" placeholder="Upload Image">
                    <progress class="custom-progress" value="0"></progress>
                      <% if (portfolio.image) { %>
                        <img class="preview-image" src="https://allerton.s3.amazonaws.com/<%= portfolio.image %>" />
                    <% } %>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
             <div class="col-12">
                <div class="form-group">
                    <textarea class="form-control froala" type="text" name="portfolio[description]" placeholder="Description">
                        <%= portfolio.description %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update "<%= portfolio.title %>"</button>
                </div>
            </div>
        </div>
        </form>
    </div>
</section>
<% include ../plain-partials/footer %>
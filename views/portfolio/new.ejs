<% include ../plain-partials/header %>
<section>
<div class="container">
    <h3>Create a new portfolio</h3>
    <form action="/portfolio" method="POST">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Portfolio Title">
                </div>
                <div class="image-upload" class="form-group">
                    <input type="file" class="form-control" accept=".jpg,.png" name="image" placeholder="Upload Image">
                    <progress class="custom-progress" value="0"></progress>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
             <div class="col-12">
                <div class="form-group">
                    <textarea class="form-control froala" type="text" name="description" placeholder="Description">
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create role</button>
                </div>
            </div>
        </div>
    </form>
</div>
</section>

<% include ../plain-partials/footer %>